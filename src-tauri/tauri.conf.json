{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OmniDownloader",
  "version": "2.2.0",
  "identifier": "com.omnidownloader.main",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OmniDownloader",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "externalBin": [
      "ytdlp",
      "wget"
    ],
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Ahmad Abdelbary",
    "copyright": "Copyright Â© 2026 Ahmad Abdelbary. All rights reserved.",
    "category": "Utility",
    "shortDescription": "Universal video downloader supporting multiple platforms",
    "longDescription": "OmniDownloader is a powerful and easy-to-use application for downloading videos from various platforms including YouTube, Facebook, Instagram, and more. Features include batch downloads, format selection, and subtitle support.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US", "ar-SA"],
        "template": null,
        "fragmentPaths": [],
        "componentRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      },
      "nsis": {
        "headerImage": null,
        "sidebarImage": null,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English", "Arabic"],
        "displayLanguageSelector": true,
        "compression": "lzma",
        "startMenuFolder": "OmniDownloader",
        "installerHooks": null,
        "minimumWebview2Version": null
      }
    }
  }
}