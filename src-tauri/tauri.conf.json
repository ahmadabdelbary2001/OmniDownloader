{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "yt-dlp-desktop",
  "version": "0.1.0",
  "identifier": "com.ytdlp.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "yt-dlp-desktop",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "externalBin": ["ytdlp", "wget"],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}