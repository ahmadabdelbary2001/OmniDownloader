{
  "identifier": "default",
  "description": "Default capabilities for the app",
  "local": true,
  "windows": [
    "*"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ytdlp",
          "cmd": "ytdlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "wget",
          "cmd": "wget",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "ytdlp",
          "cmd": "ytdlp",
          "sidecar": true,
          "args": true
        },
        {
          "name": "wget",
          "cmd": "wget",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$HOME/**"
        }
      ]
    }
  ]
}